# It configures Nginx to serve the route /airbnb-onepage/ from AirBnB_clone_v2.

server {
    # It listens on port 80
    listen      80 default_server;
    listen      [::]:80 default_server ipv6only=on;

    # It uses IP of server as domain name
    server_name 100.25.223.4;

    # It customizes HTTP response header
    add_header  X-Served-By 277429-web-01;

    # The serve /airbnb-onepage/ route from AirBnB_clone_v2
    location = /airbnb-onepage/ {
        proxy_pass http://127.0.0.1:5000/airbnb-onepage/;
    }

    # 404 error page
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}
